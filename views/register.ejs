<% include ./partials/header %>

<div class="container">
    <div class="container mt-1">
        <div class="alert alert-info" role="alert">
            <p style="text-align: center"><strong>Note:</strong> username and password must have a <strong>minimum of 8</strong> characters.</p>    
        </div>
    </div>
</div>

<div class="text-center" style="width: 50%; margin: 25px auto;">
    <h1 class="mb-3 forest-text"><i class="fas fa-user-plus"></i></h1> 
    <form action="/register" method="post">
      <h1 class="h3 mb-4 font-weight-normal forest-text">Signup</h1>
      <label for="username" class="sr-only">Username</label>
        <input type="text" name="username" class="form-control mt-1" placeholder="Username" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" class="form-control mt-1" name="password" placeholder="Password" required>
        <label for="adminCode" class="sr-only">Password</label>
        <input type="password" class="form-control mt-1" name="adminCode" placeholder="Admin Code" required>
      <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Signup</button>
    </form>
</div>





