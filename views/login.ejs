<% include ./partials/header %>

<div class="text-center" style="width: 50%; margin: 25px auto;">
    <h1 class="mb-3 forest-text"><i class="fas fa-user"></i></h1> 
    <form action="/login" method="post">
      <h1 class="h3 mb-4 font-weight-normal forest-text">Please login</h1>
      <label for="username" class="sr-only">Username</label>
        <input type="text" name="username" class="form-control mt-1" placeholder="Username" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" class="form-control mt-1" name="password" placeholder="Password" required>
      <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Login</button>
    </form>
</div>

